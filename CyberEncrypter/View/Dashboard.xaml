<UserControl x:Class="CyberEncrypter.View.Dashboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CyberEncrypter.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Dashboard" 
                       FontSize="24" 
                       FontWeight="SemiBold" 
                       Foreground="White" 
                       Margin="0,0,0,10"/>

            <TextBlock Text="Your secure file encryption hub" 
                       FontSize="14" 
                       Foreground="#AAAAAA" 
                       Margin="0,0,0,5"/>

            <Border Height="1" 
                    Background="#333333" 
                    Margin="0,15,0,0"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Style="{StaticResource DashboardCard}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <TextBlock Text="&#xE8A5;" 
                                           FontFamily="Segoe MDL2 Assets" 
                                           FontSize="20" 
                                           Foreground="#00E5FF" 
                                           VerticalAlignment="Center"/>
                                <TextBlock Text="Files Encrypted" 
                                           FontSize="16" 
                                           Foreground="#CCCCCC" 
                                           Margin="10,0,0,0" 
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                            <TextBlock Text="428" 
                                       FontSize="32" 
                                       FontWeight="Bold" 
                                       Foreground="White" 
                                       Margin="0,10,0,0"/>
                            <TextBlock Text="Last 30 days" 
                                       FontSize="12" 
                                       Foreground="#888888" 
                                       Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="1" Style="{StaticResource DashboardCard}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <TextBlock Text="&#xE785;" 
                                           FontFamily="Segoe MDL2 Assets" 
                                           FontSize="20" 
                                           Foreground="#00E5FF" 
                                           VerticalAlignment="Center"/>
                                <TextBlock Text="Files Decrypted" 
                                           FontSize="16" 
                                           Foreground="#CCCCCC" 
                                           Margin="10,0,0,0" 
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                            <TextBlock Text="392" 
                                       FontSize="32" 
                                       FontWeight="Bold" 
                                       Foreground="White" 
                                       Margin="0,10,0,0"/>
                            <TextBlock Text="Last 30 days" 
                                       FontSize="12" 
                                       Foreground="#888888" 
                                       Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="2" Style="{StaticResource DashboardCard}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <TextBlock Text="&#xE7EE;" 
                                           FontFamily="Segoe MDL2 Assets" 
                                           FontSize="20" 
                                           Foreground="#00E5FF" 
                                           VerticalAlignment="Center"/>
                                <TextBlock Text="Active Keys" 
                                           FontSize="16" 
                                           Foreground="#CCCCCC" 
                                           Margin="10,0,0,0" 
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                            <TextBlock Text="4" 
                                       FontSize="32" 
                                       FontWeight="Bold" 
                                       Foreground="White" 
                                       Margin="0,10,0,0"/>
                            <TextBlock Text="AES-256 Encryption" 
                                       FontSize="12" 
                                       Foreground="#888888" 
                                       Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <Border Grid.Row="1" 
                        Style="{StaticResource DashboardCard}" 
                        Margin="5,20,5,5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" 
                                   Text="Quick Actions" 
                                   FontSize="18" 
                                   FontWeight="SemiBold" 
                                   Foreground="White" 
                                   Margin="0,0,0,15"/>

                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="0" 
                                    Style="{StaticResource DashboardButton}" 
                                    Height="100" 
                                    Margin="0,0,5,0" Click="Encryptfiles_Click">
                                <StackPanel>
                                    <TextBlock Text="&#xE8A5;" 
                                               FontFamily="Segoe MDL2 Assets" 
                                               FontSize="24" 
                                               Foreground="#00E5FF" 
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="Encrypt Files" 
                                               FontSize="16" 
                                               Foreground="White" 
                                               Margin="0,10,0,0" 
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="Secure your files with AES-256" 
                                               FontSize="12" 
                                               Foreground="#AAAAAA" 
                                               Margin="0,5,0,0" 
                                               HorizontalAlignment="Center"
                                               TextWrapping="Wrap"
                                               TextAlignment="Center"/>
                                </StackPanel>
                            </Button>

                            <Button Grid.Column="1" 
                                    Style="{StaticResource DashboardButton}" 
                                    Height="100" 
                                    Margin="5,0,0,0" Click="Decrypt">
                                <StackPanel>
                                    <TextBlock Text="&#xE785;" 
                                               FontFamily="Segoe MDL2 Assets" 
                                               FontSize="24" 
                                               Foreground="#00E5FF" 
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="Decrypt Files" 
                                               FontSize="16" 
                                               Foreground="White" 
                                               Margin="0,10,0,0" 
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="Restore access to your encrypted files" 
                                               FontSize="12" 
                                               Foreground="#AAAAAA" 
                                               Margin="0,5,0,0" 
                                               HorizontalAlignment="Center"
                                               TextWrapping="Wrap"
                                               TextAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>
<UserControl x:Class="CyberEncrypter.View.Decrypt"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CyberEncrypter.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Decrypt Files" 
                       FontSize="24" 
                       FontWeight="SemiBold" 
                       Foreground="White" 
                       Margin="0,0,0,10"/>

            <TextBlock Text="Restore access to your encrypted files" 
                       FontSize="14" 
                       Foreground="#AAAAAA" 
                       Margin="0,0,0,5"/>

            <Border Height="1" 
                    Background="#333333" 
                    Margin="0,15,0,0"/>
        </StackPanel>

        <Border Grid.Row="1" 
                Style="{StaticResource DecryptCard}">
            <StackPanel>
                <Grid Margin="0,0,0,20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.ColumnSpan="2"
                               Text="Select encrypted files or folder"
                               FontSize="16"
                               Foreground="White"
                               Margin="0,0,0,10"/>

                    <TextBox Grid.Row="1" Grid.Column="0"
                             x:Name="PathTextBox"
                             Height="36"
                             IsReadOnly="True"
                             Text="No items selected"
                             VerticalContentAlignment="Center"/>

                    <StackPanel Grid.Row="1" Grid.Column="1"
                                Orientation="Horizontal" 
                                Margin="10,0,0,0">
                        <Button Style="{StaticResource ActionButton}"
                                Height="36"
                                Width="100"
                                Content="Select Files"
                                x:Name="SelectFilesButton"
                                Margin="0,0,10,0"/>

                        <Button Style="{StaticResource ActionButton}"
                                Height="36"
                                Width="100"
                                Content="Select Folder"
                                x:Name="SelectFolderButton"/>
                    </StackPanel>
                </Grid>

                <Grid Margin="0,0,0,30">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0"
                               Text="Enter decryption password"
                               FontSize="16"
                               Foreground="White"
                               Margin="0,0,0,10"/>

                    <PasswordBox Grid.Row="1"
                                 x:Name="PasswordBox"
                                 Height="36"
                                 VerticalContentAlignment="Center"/>
                </Grid>
                
                <Button Style="{StaticResource DecryptButton}"
                        Content="Decrypt Files"
                        Height="45"
                        FontSize="16"
                        Width="200"
                        Margin="0,10,0,0"
                        x:Name="DecryptButton">
                    <Button.ContentTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE785;" 
                                           FontFamily="Segoe MDL2 Assets" 
                                           FontSize="16" 
                                           VerticalAlignment="Center"
                                           Margin="0,0,10,0"/>
                                <TextBlock Text="{Binding}" 
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </Button.ContentTemplate>
                </Button>

                <Grid Margin="0,0,0,30">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>


                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
<Window x:Class="CyberEncrypter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CyberEncrypter" Height="600" Width="1000" WindowStartupLocation="CenterScreen"
        WindowStyle="None" Background="Transparent" ResizeMode="CanResize" AllowsTransparency="True"
        MinHeight="550" MinWidth="800">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="40" 
                      CornerRadius="10" 
                      GlassFrameThickness="0" 
                      ResizeBorderThickness="5"/>
    </WindowChrome.WindowChrome>

    <Border Background="#121212" CornerRadius="10" BorderBrush="#333333" BorderThickness="1">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Background="#1A1A1A" Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0,0,0">
                    <TextBlock Text="&#xE72E;" 
                               FontFamily="Segoe MDL2 Assets" 
                               FontSize="28" 
                               Foreground="#00E5FF"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="CyberEncrypter" 
                               Foreground="White" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Margin="15,0,0,0"
                               VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Grid.Row="1" Margin="0,20,0,0">
                    <Button Style="{StaticResource NavButton}" Click="dashboard_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE8B7;" 
                                       FontFamily="Segoe MDL2 Assets" 
                                       FontSize="16" 
                                       Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="Dashboard" 
                                       Margin="15,0,0,0" 
                                       FontSize="14" 
                                       Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource NavButton}" Click="Button_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE8A5;" 
                                       FontFamily="Segoe MDL2 Assets" 
                                       FontSize="16" 
                                       Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="Encrypt Files" 
                                       Margin="15,0,0,0" 
                                       FontSize="14" 
                                       Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource NavButton}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE785;" 
                                       FontFamily="Segoe MDL2 Assets" 
                                       FontSize="16" 
                                       Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="Decrypt Files" 
                                       Margin="15,0,0,0" 
                                       FontSize="14" 
                                       Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource NavButton}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE7EE;" 
                                       FontFamily="Segoe MDL2 Assets" 
                                       FontSize="16" 
                                       Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="Key Management" 
                                       Margin="15,0,0,0" 
                                       FontSize="14" 
                                       Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource NavButton}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE713;" 
                                       FontFamily="Segoe MDL2 Assets" 
                                       FontSize="16" 
                                       Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="Settings" 
                                       Margin="15,0,0,0" 
                                       FontSize="14" 
                                       Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <TextBlock Grid.Row="2" 
                           Text="v1.0.0" 
                           Foreground="#555555" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,15"/>
            </Grid>

            <Grid Height="40" VerticalAlignment="Top" Grid.ColumnSpan="2">
                <DockPanel LastChildFill="True" Background="Transparent">
                    <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Style="{StaticResource WindowControlButton}"
                                Click="Minimize_Click" 
                                WindowChrome.IsHitTestVisibleInChrome="True">
                            <TextBlock Text="&#xE921;" 
                                       FontFamily="Segoe MDL2 Assets" 
                                       FontSize="10" 
                                       Foreground="White"/>
                        </Button>
                        <Button Style="{StaticResource WindowControlButton}"
                                Click="Maximize_Click" 
                                WindowChrome.IsHitTestVisibleInChrome="True">
                            <TextBlock Name="MaximizeIcon"
                                       Text="&#xE922;" 
                                       FontFamily="Segoe MDL2 Assets" 
                                       FontSize="10" 
                                       Foreground="White"/>
                        </Button>
                        <Button Style="{StaticResource CloseButton}"
                                Click="Close_Click" 
                                WindowChrome.IsHitTestVisibleInChrome="True">
                            <TextBlock Text="&#xE8BB;" 
                                       FontFamily="Segoe MDL2 Assets" 
                                       FontSize="10" 
                                       Foreground="White"/>
                        </Button>
                    </StackPanel>
                    <Grid/>
                </DockPanel>
            </Grid>

           
            <Grid Grid.Column="1" Margin="0,40,0,0">
                <Grid x:Name="Dashboard" Visibility="Visible">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Dashboard" 
                               Foreground="White" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Margin="30,20,0,20"/>

                    <Grid Grid.Row="1" Margin="30,0,30,30">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0" 
                                    Background="#252525" 
                                    CornerRadius="10" 
                                    Margin="0,0,10,0"
                                    Padding="20">
                                <StackPanel>
                                    <TextBlock Text="Files Encrypted" 
                                               Foreground="#AAAAAA" 
                                               FontSize="14"/>
                                    <TextBlock Text="0" 
                                               Foreground="White" 
                                               FontSize="24" 
                                               FontWeight="Bold" 
                                               Margin="0,10,0,0"/>
                                </StackPanel>
                            </Border>

                            <Border Grid.Column="1" 
                                    Background="#252525" 
                                    CornerRadius="10" 
                                    Margin="10,0,10,0"
                                    Padding="20">
                                <StackPanel>
                                    <TextBlock Text="Storage Saved" 
                                               Foreground="#AAAAAA" 
                                               FontSize="14"/>
                                    <TextBlock Text="0 MB" 
                                               Foreground="White" 
                                               FontSize="24" 
                                               FontWeight="Bold" 
                                               Margin="0,10,0,0"/>
                                </StackPanel>
                            </Border>

                            <Border Grid.Column="2" 
                                    Background="#252525" 
                                    CornerRadius="10" 
                                    Margin="10,0,0,0"
                                    Padding="20">
                                <StackPanel>
                                    <TextBlock Text="Encryption Level" 
                                               Foreground="#AAAAAA" 
                                               FontSize="14"/>
                                    <TextBlock Text="AES-256" 
                                               Foreground="#00E5FF" 
                                               FontSize="24" 
                                               FontWeight="Bold" 
                                               Margin="0,10,0,0"/>
                                </StackPanel>
                            </Border>
                        </Grid>

                        <Border Grid.Row="1" 
                                Background="#252525" 
                                CornerRadius="10" 
                                Margin="0,20,0,0">
                            <Grid Margin="30">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="Quick Actions" 
                                           Foreground="White" 
                                           FontSize="18" 
                                           FontWeight="Bold" 
                                           Grid.Row="0"
                                           Margin="0,0,0,20"/>

                                <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <Button Style="{StaticResource CyberButton}"  Width="300" Margin="0,0,0,20" Click="Encryptfile_Click">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="&#xE8A5;" 
                                                       FontFamily="Segoe MDL2 Assets" 
                                                       FontSize="16" 
                                                       VerticalAlignment="Center"/>
                                            <TextBlock Text="Encrypt New Files" 
                                                       Margin="10,0,0,0" 
                                                       FontSize="14" 
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>

                                    <Button Style="{StaticResource CyberButton}" Width="300" Margin="0,0,0,20">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="&#xE785;" 
                                                       FontFamily="Segoe MDL2 Assets" 
                                                       FontSize="16" 
                                                       VerticalAlignment="Center"/>
                                            <TextBlock Text="Decrypt .Cyber Files" 
                                                       Margin="10,0,0,0" 
                                                       FontSize="14" 
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>

                                    <Button Style="{StaticResource CyberButton}" Width="300">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="&#xE7EE;" 
                                                       FontFamily="Segoe MDL2 Assets" 
                                                       FontSize="16" 
                                                       VerticalAlignment="Center"/>
                                            <TextBlock Text="Generate New Key" 
                                                       Margin="10,0,0,0" 
                                                       FontSize="14" 
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>
                </Grid>

                <Grid x:Name="EncryptFilesPage" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Encrypt Files" 
                               Foreground="White" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Margin="30,20,0,20"/>

                    <Border Grid.Row="1" 
                            Background="#252525" 
                            CornerRadius="10" 
                            Margin="30,0,30,30">
                        <Grid Margin="30">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" 
                                       Text="Select files or folders to encrypt with .Cyber extension" 
                                       Foreground="#AAAAAA" 
                                       FontSize="14" 
                                       Margin="0,0,0,20"/>

                            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,20">
                                <Button Style="{StaticResource CyberButton}" Width="180" Margin="0,0,20,0">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="&#xE8E5;" 
                                                   FontFamily="Segoe MDL2 Assets" 
                                                   FontSize="16" 
                                                   VerticalAlignment="Center"/>
                                        <TextBlock Text="Select Files" 
                                                   Margin="10,0,0,0" 
                                                   FontSize="14" 
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <Button Style="{StaticResource CyberButton}" Width="180">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="&#xE838;" 
                                                   FontFamily="Segoe MDL2 Assets" 
                                                   FontSize="16" 
                                                   VerticalAlignment="Center"/>
                                        <TextBlock Text="Select Folder" 
                                                   Margin="10,0,0,0" 
                                                   FontSize="14" 
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>

                            <Border Grid.Row="2" 
                                    Background="#1A1A1A" 
                                    BorderBrush="#333333" 
                                    BorderThickness="1" 
                                    CornerRadius="5">
                                <ListView Background="Transparent" 
                                          BorderThickness="0" 
                                          Foreground="White"/>
                            </Border>

                            <Grid Grid.Row="3" Margin="0,20,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Orientation="Horizontal">
                                    <TextBlock Text="Encryption password: " 
                                               Foreground="White" 
                                               VerticalAlignment="Center"/>
                                    <PasswordBox Width="200" 
                                                 Height="30" 
                                                 VerticalContentAlignment="Center"
                                                 Background="#1A1A1A"
                                                 Foreground="White"
                                                 BorderBrush="#333333"/>
                                </StackPanel>

                                <Button Grid.Column="1" Style="{StaticResource CyberButton}" Width="160">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="&#xE8A5;" 
                                                   FontFamily="Segoe MDL2 Assets" 
                                                   FontSize="16" 
                                                   VerticalAlignment="Center"/>
                                        <TextBlock Text="Start Encryption" 
                                                   Margin="10,0,0,0" 
                                                   FontSize="14" 
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                            </Grid>
                        </Grid>
                    </Border>
                </Grid>

                <Grid x:Name="DecryptFilesPage" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Decrypt Files" 
                               Foreground="White" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Margin="30,20,0,20"/>

                    <Border Grid.Row="1" 
                            Background="#252525" 
                            CornerRadius="10" 
                            Margin="30,0,30,30">
                        <Grid Margin="30">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" 
                                       Text="Select .Cyber files to decrypt" 
                                       Foreground="#AAAAAA" 
                                       FontSize="14" 
                                       Margin="0,0,0,20"/>

                            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,20">
                                <Button Style="{StaticResource CyberButton}" Width="180" Margin="0,0,20,0">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="&#xE8E5;" 
                                                   FontFamily="Segoe MDL2 Assets" 
                                                   FontSize="16" 
                                                   VerticalAlignment="Center"/>
                                        <TextBlock Text="Select .Cyber Files" 
                                                   Margin="10,0,0,0" 
                                                   FontSize="14" 
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <Button Style="{StaticResource CyberButton}" Width="180">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="&#xE838;" 
                                                   FontFamily="Segoe MDL2 Assets" 
                                                   FontSize="16" 
                                                   VerticalAlignment="Center"/>
                                        <TextBlock Text="Select Folder" 
                                                   Margin="10,0,0,0" 
                                                   FontSize="14" 
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>

                            <Border Grid.Row="2" 
                                    Background="#1A1A1A" 
                                    BorderBrush="#333333" 
                                    BorderThickness="1" 
                                    CornerRadius="5">
                                <ListView Background="Transparent" 
                                          BorderThickness="0" 
                                          Foreground="White"/>
                            </Border>

                            <Grid Grid.Row="3" Margin="0,20,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Orientation="Horizontal">
                                    <TextBlock Text="Decryption password: " 
                                               Foreground="White" 
                                               VerticalAlignment="Center"/>
                                    <PasswordBox Width="200" 
                                                 Height="30" 
                                                 VerticalContentAlignment="Center"
                                                 Background="#1A1A1A"
                                                 Foreground="White"
                                                 BorderBrush="#333333"/>
                                </StackPanel>

                                <Button Grid.Column="1" Style="{StaticResource CyberButton}" Width="160">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="&#xE785;" 
                                                   FontFamily="Segoe MDL2 Assets" 
                                                   FontSize="16" 
                                                   VerticalAlignment="Center"/>
                                        <TextBlock Text="Start Decryption" 
                                                   Margin="10,0,0,0" 
                                                   FontSize="14" 
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                            </Grid>
                        </Grid>
                    </Border>
                </Grid>

                <Grid x:Name="KeyManagementPage" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Key Management" 
                               Foreground="White" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Margin="30,20,0,20"/>

                    <Border Grid.Row="1" 
                            Background="#252525" 
                            CornerRadius="10" 
                            Margin="30,0,30,30">
                        <Grid Margin="30">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" 
                                       Text="Manage your encryption keys" 
                                       Foreground="#AAAAAA" 
                                       FontSize="14" 
                                       Margin="0,0,0,20"/>

                            <Grid Grid.Row="1" Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" 
                                           Text="Current Key: " 
                                           Foreground="White" 
                                           VerticalAlignment="Center"/>

                                <Border Grid.Column="1" 
                                        Background="#1A1A1A" 
                                        BorderBrush="#333333" 
                                        BorderThickness="1" 
                                        CornerRadius="5" 
                                        Margin="10,0,10,0" 
                                        Padding="10,8">
                                    <TextBlock Text="No active key" 
                                               Foreground="#AAAAAA"/>
                                </Border>

                                <Button Grid.Column="2" Style="{StaticResource CyberButton}" Width="160">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="&#xE7EE;" 
                                                   FontFamily="Segoe MDL2 Assets" 
                                                   FontSize="16" 
                                                   VerticalAlignment="Center"/>
                                        <TextBlock Text="Generate New Key" 
                                                   Margin="10,0,0,0" 
                                                   FontSize="14" 
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                            </Grid>

                            <TextBlock Grid.Row="2" 
                                       Text="Saved Keys" 
                                       Foreground="White"
                                       FontSize="16" 
                                       FontWeight="Bold" 
                                       Margin="0,10,0,10"/>

                            <Border Grid.Row="3" 
                                    Background="#1A1A1A" 
                                    BorderBrush="#333333" 
                                    BorderThickness="1" 
                                    CornerRadius="5">
                                <ListView Background="Transparent" 
                                          BorderThickness="0" 
                                          Foreground="White"/>
                            </Border>

                            <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,20,0,0" HorizontalAlignment="Right">
                                <Button Style="{StaticResource CyberButton}" Width="160" Margin="0,0,10,0">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="&#xE74E;" 
                                                   FontFamily="Segoe MDL2 Assets" 
                                                   FontSize="16" 
                                                   VerticalAlignment="Center"/>
                                        <TextBlock Text="Export Key" 
                                                   Margin="10,0,0,0" 
                                                   FontSize="14" 
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <Button Style="{StaticResource CyberButton}" Width="160" Margin="0,0,10,0">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="&#xE8E5;" 
                                                   FontFamily="Segoe MDL2 Assets" 
                                                   FontSize="16" 
                                                   VerticalAlignment="Center"/>
                                        <TextBlock Text="Import Key" 
                                                   Margin="10,0,0,0" 
                                                   FontSize="14" 
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <Button Style="{StaticResource DangerButton}" Width="160">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="&#xE74D;" 
                                                   FontFamily="Segoe MDL2 Assets" 
                                                   FontSize="16" 
                                                   VerticalAlignment="Center"/>
                                        <TextBlock Text="Delete Key" 
                                                   Margin="10,0,0,0" 
                                                   FontSize="14" 
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>

                <Grid x:Name="SettingsPage" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Settings" 
                               Foreground="White" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Margin="30,20,0,20"/>

                    <Border Grid.Row="1" 
                            Background="#252525" 
                            CornerRadius="10" 
                            Margin="30,0,30,30">
                        <Grid Margin="30">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" 
                                       Text="Application Settings" 
                                       Foreground="#AAAAAA" 
                                       FontSize="14" 
                                       Margin="0,0,0,20"/>

                            <Grid Grid.Row="1" Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" 
                                           Text="Encryption Algorithm:" 
                                           Foreground="White" 
                                           VerticalAlignment="Center"/>

                                <ComboBox Grid.Column="1" 
                                          Width="200" 
                                          HorizontalAlignment="Left" 
                                          SelectedIndex="0"
                                          Background="#1A1A1A"
                                          Foreground="White"
                                          BorderBrush="#333333">
                                    <ComboBoxItem Content="AES-256 (Recommended)"/>
                                    <ComboBoxItem Content="AES-128"/>
                                    <ComboBoxItem Content="Twofish"/>
                                    <ComboBoxItem Content="Serpent"/>
                                </ComboBox>
                            </Grid>

                            <Grid Grid.Row="2" Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" 
                                           Text="Delete original after encryption:" 
                                           Foreground="White" 
                                           VerticalAlignment="Center"/>

                                <CheckBox Grid.Column="1" 
                                          Content="Securely delete original files" 
                                          Foreground="White"/>
                            </Grid>

                            <Grid Grid.Row="3" Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" 
                                           Text="Start with Windows:" 
                                           Foreground="White" 
                                           VerticalAlignment="Center"/>

                                <CheckBox Grid.Column="1" 
                                          Content="Launch on system startup" 
                                          Foreground="White"/>
                            </Grid>

                            <Grid Grid.Row="4" Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" 
                                           Text="Application Theme:" 
                                           Foreground="White" 
                                           VerticalAlignment="Center"/>

                                <ComboBox Grid.Column="1" 
                                          Width="200" 
                                          HorizontalAlignment="Left" 
                                          SelectedIndex="0"
                                          Background="#1A1A1A"
                                          Foreground="White"
                                          BorderBrush="#333333">
                                    <ComboBoxItem Content="Dark (Default)"/>
                                    <ComboBoxItem Content="Light"/>
                                    <ComboBoxItem Content="System"/>
                                </ComboBox>
                            </Grid>

                            <Button Grid.Row="5" 
                                    Style="{StaticResource CyberButton}" 
                                    Width="160"
                                    HorizontalAlignment="Right">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE74E;" 
                                               FontFamily="Segoe MDL2 Assets" 
                                               FontSize="16" 
                                               VerticalAlignment="Center"/>
                                    <TextBlock Text="Save Settings" 
                                               Margin="10,0,0,0" 
                                               FontSize="14" 
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>
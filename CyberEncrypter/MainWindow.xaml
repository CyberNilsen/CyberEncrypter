<Window x:Class="CyberEncrypter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CyberEncrypter" 
        Height="450" Width="800" WindowStartupLocation="CenterScreen"
        WindowStyle="None" Background="Black" ResizeMode="CanResize" AllowsTransparency="True"
        MinHeight="400" MinWidth="600">

    <Window.Resources>
        <Style x:Key="WindowControlButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="46"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" TargetName="border" Value="#555555"/>
                                <Setter Property="TextBlock.Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" TargetName="border" Value="#444444"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        
        <Style x:Key="CloseButton" TargetType="Button" BasedOn="{StaticResource WindowControlButton}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" TargetName="border" Value="#E81123"/>
                                <Setter Property="TextBlock.Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" TargetName="border" Value="#8E0A16"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="40" 
                      CornerRadius="10" 
                      GlassFrameThickness="0" 
                      ResizeBorderThickness="5"/>
    </WindowChrome.WindowChrome>

    <Grid Background="Black">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Background="#1E1E1E" Grid.Column="0" Margin="0,40,0,0"/>

        <Grid Background="#252525" Grid.Column="1" Margin="0,40,0,0">
            <TextBlock Text="Welcome to CyberEncrypter" Foreground="White" FontSize="16" FontWeight="Bold" 
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>

        <Grid Height="40" VerticalAlignment="Top" Grid.ColumnSpan="2">
            <DockPanel LastChildFill="True" Background="#333333">
                <TextBlock Text="CyberEncrypter" 
                           Foreground="White" 
                           FontSize="14" 
                           VerticalAlignment="Center" 
                           Margin="10,0,0,0"/>

                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Style="{StaticResource WindowControlButton}"
                            Click="Minimize_Click" 
                            WindowChrome.IsHitTestVisibleInChrome="True"
                            ToolTip="Minimize">
                        <TextBlock Text="&#xE921;" 
                                   FontFamily="Segoe MDL2 Assets" 
                                   FontSize="10" 
                                   Foreground="White"/>
                    </Button>
                    <Button Style="{StaticResource CloseButton}"
                            Click="Close_Click" 
                            WindowChrome.IsHitTestVisibleInChrome="True"
                            ToolTip="Close">
                        <TextBlock Text="&#xE8BB;" 
                                   FontFamily="Segoe MDL2 Assets" 
                                   FontSize="10" 
                                   Foreground="White"/>
                    </Button>
                </StackPanel>

                <Grid/>
            </DockPanel>
        </Grid>
    </Grid>
</Window>